.sidebar
    width 240px
    height 100%
    overflow auto
    border-right  1px solid white
    box-shadow 1px 2px 3px grey
    background #fff
    position fixed 
    .sidebar-menu
        list-style-type none
        .sidebar-items
            .sidebar-link
                color #797978
                display block
                cursor pointer 
                &:hover
                    text-decoration none
                    background white
                    color #3a628c
                .icon
                    margin-right 10px
                    color #0483a0
.sidebar
	&::-webkit-scrollbar-track
        -webkit-box-shadow inset 0 0 1px rgba(0,0,0,0.3)
        background-color #F5F5F5
    &::-webkit-scrollbar
        width 3px
        background-color #F5F5F5
    &::-webkit-scrollbar-thumb
        background-color #14abce