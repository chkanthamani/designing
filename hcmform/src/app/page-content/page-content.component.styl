.container
    background-color white
    border-radius 5px
    .head       
        padding 10px
    h4
        font-size 1rem
        font-weight normal
        color #4d80bf
    .details
        list-style-type none
        margin 0px
        .details-list
            position relative
            width 15%
            text-align center
            .details-list-item
                color #4d80bf
                font-size 0.9rem
                font-weight 500
            .details-list-item::after
                content ''
                display block
                position absolute
                width 100%
                height 2px
                right -75px
                top 10px
                background #cacaca
            .step
                background-color #4d80bf
                display block
                border-radius 100%
                width 25px
                height 25px
                color white
                line-height 22px
                text-align center
                margin-left 50px
            .details-list-item6::after
                display none
            .details-list-item6
                color #4d80bf
                font-size 0.9rem
                font-weight 500
    .row
        padding 10px
        .form-group
            .control-label
                display block
                font-weight normal
                color #828282
                font-size 0.8rem
            .control-label::after
                content '*'
                color #c54040
                margin-left 2px
            .form-control
                font-weight normal
                font-size 0.9rem
            .form-control:focus
                border-color #ced4da
                box-shadow 0px 0px 0px
    .col-12
        a
            color white 
.hide
    display none 
.active
    display block
.active1
    display flex
    