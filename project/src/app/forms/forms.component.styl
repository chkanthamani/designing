.repeater
    display flex
    margin-top 35px
.title
    margin-bottom 12px
    font-size 14px
    font-weight 500
    // text-decoration underline
.firstloop
    list-style-type none
    padding 0
    margin 0
    width 180px
    border 1px solid #ececec
    .firstlist
        padding 5px
        cursor pointer
        .sublist
            display none
        &:hover
            background #ececec
            .sublist
                display block
                position absolute
                left 17%
                top 6%
        
.input-file
    padding 0
    line-height 23px
    width 300px
    border 1px solid #dadada
    &::-webkit-file-upload-button
        visibility hidden
    &:before
        content 'Choose'
        border-radius 0
        padding 2px 8px 3px
        outline none
        white-space nowrap
        cursor pointer
        color #fff
        font-weight 400
        font-size 10pt
        display inline-block
        vertical-align top
        background-color #1668af
        border 1px solid #1668af
.multiselect
    width 20%
    border 1px solid #c5c5c5
    border-radius 4px
    angular2-multiselect
        .cuppa-dropdown
            .selected-list
                .c-btn
                    min-height 32px
                    .c-angle-down
                        top 38%
.card
    .card-header
        display flex
        align-items center
        justify-content space-between
        background white
    .card-body
        background white
        height 450px
        overflow-y auto
    .card-footer
        background white
        