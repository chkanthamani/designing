.multi-select-dropdown
    margin-left 20px
    margin-top 30px
    .title
    .multiselect
        .multi-inputfield
            position relative
            width 20%
            input
                margin-top 10px
                border-bottom 1px solid #e2e2e2
            .multi-icon
                position absolute
                top 6px
                right 15px
                i
                    color gray
        .multi-inputchild
            width 20%
            position relative
            display none
            .multi-list
                list-style-type none
                margin 0
                padding 0
                border 1px solid #e8e8e8
                margin-top 18px
                li
                    padding 4px 8px
                    cursor pointer
                    display flex
                    align-items center
                    &:hover
                        background #f6f6f6
                    .input-check
                        width 6%
                        margin-right 10px
                        input
                            cursor pointer
                            &:focus
                                box-shadow none
            &:before
                content ''
                position absolute
                top -15px
                left 13px
                border-left 10px solid transparent
                border-right 10px solid transparent
                border-bottom 15px solid #e8e8e8
            &.show
                display block