.form-control
    &:focus
        box-shadow none
.container
    margin-top 20px
    .title
        margin-bottom 12px
        font-size 14px
        font-weight 500
        // text-decoration underline
    .input
        width 20%
    button
        margin-top 10px
    .candidates
        margin-top 15px
        width 30%
        border 1px solid #dcdcdc
        border-radius 4px
        height 150px
        overflow-y auto
        .candidate-list
            list-style-type none
            margin 0px
            padding 8px
            .list
                display flex
                position relative
                .name
                    font-size 16px
                    margin-left 14px
                    line-height 2
                .checkbox
                    width 18px
                input[type='checkbox']:checked
                    & + .name
                        text-decoration line-through
                .delete
                    margin-top 0px
                    position absolute
                    right 0px
                    font-size 16px
                    border none
                    background #fff
                    color #8e8e8e
                