.wrapper
    max-width 960px
    margin auto
    .main
        font-family  Merriweather 
        border-radius 30px
        box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
        background white
        position relative
        color #4250b5
        display none
        margin auto
        .chat-box-container
            min-height 300px
            overflow auto
            text-align center
            margin 0
            width 100%
            flex-grow 1
            display flex
            flex-direction column
            .chat-box
                height 300px
                overflow auto
                .ai
                    width 100%
                    clear both
                    content ''
                    display flex
                    justify-content flex-start
                    p
                        padding 10px 40px
                        margin 10px 20px
                        color white                                        
                        word-break break-word                    
                        background #4250b5 
                        box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
                        border-bottom-left-radius 0px
                        border-bottom-right-radius 100px
                        border-top-right-radius 100px
                        border-top-left-radius 100px 

                .user
                    /* float right; */
                    width 100%
                    clear both
                    content ''
                    display flex
                    justify-content flex-end
                    p
                        padding 10px 40px
                        margin 10px 20px
                        color white                                        
                        word-break break-word
                        background #4250b5 
                        box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
                        border-bottom-right-radius 0px
                        border-bottom-left-radius 100px
                        border-top-right-radius 100px
                        border-top-left-radius 100px 
        .chat-input-container
            margin-left 26px
            display flex      
            position relative  
            .column
                float left
                width 27.33%
                margin 11px 6px
                position relative
                .form
                    width 400px
                    position relative
                    .effect-11
                       background white
                       border-radius 30px
                       border 3px solid mediumslateblue
                       outline none
                       padding 10px 20px
                    .chat-submit
                        font-size 22px
                        margin-left 10px
                        color #4250b5
                        border 0px
                        background transparent
                        position absolute
                        right 15px
                        top 10px
                        outline none

input[type="text"] 
	font 15px/24px "Lato", Arial, sans-serif
	color #333
	width 100%
	box-sizing border-box
	letter-spacing 1px
.col-3 
	float left
	width 27.33%
	margin 40px 3%
	position relative 
.effect-11 
	& ~ .focus-bg 
		position absolute
		left 0
		top 0
		width 0
		height 100%
		background-color #4250b5
		transition 0.3s
		z-index -1
	&:focus 
		& ~ .focus-bg 
			transition 0.3s
			width 100%
.chat-box
    &::-webkit-scrollbar-track
      -webkit-box-shadow inset 0 0 1px rgba(0,0,0,0.3)
      background-color #F5F5F5
    &::-webkit-scrollbar
      width 2px
      background-color #F5F5F5
    &::-webkit-scrollbar-thumb
      background-color #4250b5
.circle
    width 50px
    height 50px
    background #4250b5
    position fixed
    border-radius 50%
    right 60px
    bottom 35px
    cursor pointer
    z-index 5
    animation animate 14s linear infinite
    .bot
        font-size 22px
        position absolute
        left 11px
        top 4px
        color white
.active
    display block !important 
    transition-duration 0.5s

@keyframes animate 
    0%
        transform rotate(0deg)
    20%
        transform rotate(360deg)